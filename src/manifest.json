{
  "name": "ニコニコ静画コメントトレーサー",
  "description": "ニコニコ静画のコメントに対するレスを追いやすくする",
  "version": "0.1",
  "manifest_version": 2,
  "content_scripts": [{
    "matches": ["http://seiga.nicovideo.jp/seiga/*","https://seiga.nicovideo.jp/seiga/*"],
    "js": ["jquery-3.3.1.min.js","content_script.js"],
    "all_frames": true
  }],
  "background": {
    "scripts": [
      "jquery-3.3.1.min.js","background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://*/*", "https://*/*"
  ],
  "externally_connectable": {
    "matches": ["*://*.seiga.nicovideo.jp/*"]
  }
}
